<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/carreras/editar/{{carrera.idcarrera}}" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idcarrera" value="{{carrera.idcarrera}}"
                        placeholder="Codigo de carrera" autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="carrera" value="{{carrera.carrera}}"
                        placeholder="Nombre de carrera" autofocus />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>