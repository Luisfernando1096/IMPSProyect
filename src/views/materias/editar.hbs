<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/materias/editar/{{materia.idmateria}}" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idmateria" value="{{materia.idmateria}}"
                        placeholder="Codigo del materia" autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="materia" value="{{materia.materia}}"
                        placeholder="Nombre del materia" autofocus />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idprofesor">
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}" {{#eq idprofesor ../materia.idprofesor}}selected{{/eq}}>
                            {{profesor}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>