<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/grupos/editar/{{grupo.idgrupo}}" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idgrupo" value="{{grupo.idgrupo}}"
                        placeholder="Codigo del grupo" autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="num_grupo" value="{{grupo.num_grupo}}"
                        placeholder="#grupo" autofocus />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="anio" value="{{grupo.anio}}"
                        placeholder="AÃ±o" />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="ciclo" value="{{grupo.ciclo}}"
                        placeholder="Ciclo" />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idprofesor">
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}" {{#eq idprofesor ../grupo.idprofesor}}selected{{/eq}}>
                            {{nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <select class="form-control" name="idmateria">
                        {{#each lstMaterias}}
                        <option value="{{idmateria}}" {{#eq idmateria ../grupo.idmateria}}selected{{/eq}}>
                            {{materia}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>